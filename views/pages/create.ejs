<%- include('../partials/head') -%>
<%- include('../partials/nav') -%>
    <br>
    <div class="create_comic_box">
        <h2 class="create_new_comic">CREATE NEW COMIC</h2>
            <form action="/books/" method="POST" class="form_css"> 
                <div>
                    <label for="comic_title">Title:</label>
                    <input type="text" id="title" name="title" placeholder="Title" required/>
                </div>
                <br>
                <div>
                    <label for="author">Author</label>
                    <input type="text" id="author" name="author" placeholder="author" required/>
                </div>
                <br>
                <div>
                    <label for="publisher">Publisher:</label>
                    <select name="publisher" id="publisher">
                        <option value="default" disabled selected hidden>Select</option>
                        <option value="boombox">BOOM! Box</option>
                        <option value="dc">DC Comics</option>
                        <option value="hna">Harry N. Abrams</option>
                        <option value="icon">Icon Books</option>
                        <option value="ic">Image Comics</option>
                        <option value="marvel">Marvel</option>
                        <option value="s&s">Simon and Schuster</option>
                        <option value="tsp">Top Shelf Productions</option>
                        <option value="viz">VIZ Media LLC</option>
                    </select>
                </div>
                <br>
                <div>
                    <label for="genre">Genre:</label>
                <input type="text" id="genre" name="genre" placeholder="Genre">
                </div>
                <br>

                <div>
                    <label for="pages"># of pages:</label>
                <input type="text" id="pages" name="pages" placeholder="Only type in the number">
                </div>
                <br>
                <div>
                    <label for="rating">Rating</label>
                    <input type="number" id="rating" name="rating" min="0" max="5" placeholder="number (0-5)">
                    <select name="rating" id="rating">
                        <option value="None" disabled selected hidden>Select your rating</option>
                        <option value="no stars">0</option>
                        <option value="1/2 star">0.5</option>
                        <option value="1 star">1</option>
                        <option value="1.5 stars">1.5</option>
                        <option value="2 stars">2</option>
                        <option value="2.5 stars">2.5</option>
                        <option value="3 stars">3</option>
                        <option value="3.5 stars">3.5</option>
                        <option value="4 stars">4</option>
                        <option value="4.5 stars">4.5</option>
                        <option value="5 stars">5</option>
                    </select>
                </div>
                <br>
                <div>
                    <label for="synopsis">Synopsis</label>
                    <input type="text" id="synopsis" name="synopsis" placeholder="Synopsis"></label>
                </div>
                <br>
                <div>
                    <input type="submit" id="submission" name="submit data" class="editbtn_D">
                </div>

            </form>
    </div>
    
<%- include('../partials/footer') -%>

